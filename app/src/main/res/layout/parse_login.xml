<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|center_horizontal|center_vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/Username"
        android:id="@+id/ParseUsername"
        android:drawableStart="@drawable/ic_action_account_circle"
        android:drawableLeft="@drawable/ic_action_account_circle"
        android:drawablePadding="8dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/Password"
        android:id="@+id/ParsePassword"
        android:drawableStart="@drawable/ic_communication_vpn_key"
        android:drawableLeft="@drawable/ic_communication_vpn_key"
        android:drawablePadding="8dp" />

</LinearLayout>