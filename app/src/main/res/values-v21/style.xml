<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Settings theme -->
    <style name="StyleThemeSettings" parent="android:Theme.Material.Light">
        <item name="android:actionBarStyle">@style/actionBarStyled</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:radioButtonStyle">@style/RadioButtonTheme</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:statusBarColor">@color/green_darker</item>
    </style>

    <!--Main theme -->
    <style name="ThemeMain" parent="MaterialDrawerTheme.Light.ActionBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_darker</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:actionBarStyle">@style/actionBarStyled</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="material_drawer_primary_text">@android:color/black</item>
        <item name="material_drawer_primary_icon">@android:color/black</item>
    </style>

    <!-- Splash theme -->
    <style name="ThemeSplash" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/blue_darker</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

</resources>